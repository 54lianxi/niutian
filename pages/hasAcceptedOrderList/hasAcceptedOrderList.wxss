
page{
  width: 100%;
  height: 100%;
}
.workingContainer{
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}
scroll-view{
  box-sizing: border-box;
}
.tabContainer{
  height: 100rpx;
  /* border: 1rpx solid black; */
  display: flex;
  width: 100%;
  flex-direction: row;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  color: #555;
  position: fixed;
  left: 0; 
  top:0;
  z-index: 100;
}
.tabItem{
  height: 100rpx;
  line-height: 100rpx;
  width: 50%;
  text-align: center;
}
.listContainer{
  overflow: hidden;
}
.listItem1{
  min-height: 140rpx;
  border-bottom: 2rpx solid #eeeeee;
  padding: 10rpx 0rpx 100rpx 30rpx;
  font-size: 32rpx; 
  position: relative;
  color: #555;
  letter-spacing: 2rpx;
  box-sizing: border-box;
}
.listItem1:first-child{
  margin-top: 100rpx;
} 
.listItem1 view{
  /* height: 50rpx; */
  line-height: 50rpx;
}

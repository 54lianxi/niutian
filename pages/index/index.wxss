/**index.wxss**/
page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
  display: block;
  /* background: #F4F1F1; */
}
.userInfoContainer{
  border-bottom: 1rpx solid #eeeeee;
  min-height: 260rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center; 
}
.userinfo-avatar {
  width: 138rpx;
  height: 138rpx;
  margin: 30rpx 30rpx 20rpx 30rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
  margin-bottom: 20rpx;
}
.listItem{
  height: 150rpx;
  line-height: 150rpx;
  border-bottom:2rpx solid #eeeeee;
  display: flex;
  box-sizing: border-box;
  padding-left: 30rpx;
  position: relative;
}
.listItem::after{
  position: absolute;
  right: 30rpx;
  top: 65rpx;
  content: '';
  width: 24rpx;
  height: 24rpx;
  border-top: 4rpx solid #7f7f7f;
  border-right: 4rpx solid #7f7f7f;
  -webkit-transform: rotate(45deg); 
  transform: rotate(45deg);  
}
.list_image{
  margin-top: 26rpx;
  width: 100rpx;
  height: 100rpx;
}
.list_title{
  padding-left: 30rpx;
  font-size: 34rpx;
  color: #555;
  letter-spacing: 2rpx;
}
.badge{
  display: inline-block;
  min-width: 20rpx;
  min-height: 10rpx;
  padding: 8rpx 8rpx;
  font-size: 20rpx;
  font-weight: 600;
  line-height: 1;
  color: #fff;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  background-color: red;
  border-radius: 50%;
  position: absolute;
  left:100rpx;
  top: 20rpx;
}

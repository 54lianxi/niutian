/* pages/addWorkOrder/addWorkOrder.wxss */
input,textarea{
  border:1px solid #ccc;
  height:34px;
  margin:0 10px 10px 10px;
  box-sizing: border-box;
  padding-left:15rpx;
  line-height:34px;
  font-size:32rpx;
  border-radius:10rpx;
  
}
textarea{
  height:200rpx; 
  width:90%;
}

.picker{
  font-size:32rpx;
  line-height:40px;
  overflow:hidden;
  width:100%;
  color:#555;
}
.picker text{
  display:block;
  margin-left:12px;
  font-size:34rpx;
  float:left;
  width:60%;
  text-align:left;
}
.picker image{
  width:20px;
  height:20px;
  float:right;
  margin-top:10px;
  margin-right:100rpx;
}

.addMan{
  margin:0 20rpx;
  font-size:34rpx;
  color:#555;
}
.addMan>view{
  height:40px;
  line-height:40px;
  
}
.add{
  position:fixed;
  bottom:20px;
  left:50%;
  margin-left:-350rpx;
  z-index:1;
}
checkbox{
  height:40px;
  line-height:40px;
  
}
label{
  margin-right:30rpx;
}